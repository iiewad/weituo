<div class="min-h-dvh px-4 flex flex-row">
  <div class="flex flex-col w-full">
  <%= render "admin/semester_klasses/filter_form", form_url: copy_admin_semester_klasses_path %>
  <div class="overflow-x-auto w-full">
    <table class="table table-xs">
      <!-- head -->
      <thead>
        <tr>
          <th></th>
          <th>学期</th>
          <th>名称</th>
          <th>年级</th>
          <th>科目</th>
          <th>教师</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <!-- row 1 -->
        <% @sks.each.with_index(1) do |sk, index| %>
          <tr>
            <td><%= index %></td>
            <td>
              <%= sk.semester.name %>
            </td>
            <td>
              <%= sk.name %>
            </td>
            <td>
              <%= sk.grade.name %>
            </td>
            <td>
              <%= sk.subject.name %>
            </td>
            <td>
              <%= sk.teacher.name %>
            </td>
            <td>
              <%= render "admin/shared/drawer", item: sk, drawer_id: "drawer-cp-klass-#{sk.id}", button_name: "复制", drawer_width: "180", drawer_content: "admin/semester_klasses/copy_form" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>