<div class="drawer drawer-end">
  <input id="<%= drawer_id %>" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <!-- Page content here -->
    <label for="<%= drawer_id %>" class="drawer-button btn btn-xs btn-primary"><%= button_name || "操作" %></label>
  </div>
  <div class="drawer-side">
    <label for="<%= drawer_id %>" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="bg-base-200 min-h-full w-180 p-18">
      <%= render drawer_content, item: item %>
    </div>
  </div>
</div>