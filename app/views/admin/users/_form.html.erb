<div class="min-h-dvh px-4">
  <%= form_with model: item, url: item.new_record? ? admin_users_path : admin_user_path(item), class: "contents" do |form| %>
  <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-full border p-4">
    <legend class="fieldset-legend"><%= item.new_record? ? "创建用户" : "查看/更新用户" %></legend>
    <label class="label">用户名</label>
    <%= form.text_field :name, class: "input w-full" %>
    <label class="label">密码</label>
    <%= form.password_field :password, class: "input w-full" %>
  </fieldset>
  <%= form.submit item.new_record? ? "创建用户" : "更新用户", class: "btn btn-primary mt-4" %>
  <% end %>
</div>